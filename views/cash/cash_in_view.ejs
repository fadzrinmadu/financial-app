<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../_partials/head.ejs') %>
  <link href="/css/themes/green-light.css" rel="stylesheet" id="theme-style">
</head>
<body class="fixed-navbar fixed-layout">

  <div class="page-wrapper">
    <%- include('../_partials/navbar.ejs') %>
    <%- include('../_partials/sidebar.ejs') %>

    <div class="content-wrapper">
      <div class="page-heading">
        <h1 class="page-title">Kas Masuk</h1>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="index.html"><i class="la la-home font-20"></i></a>
          </li>
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">Kas Masuk</li>
        </ol>
      </div>
      <div class="page-content fade-in-up">
        <div class="ibox">
          <div class="ibox-head">
            <div class="ibox-title">Data Kas Masuk</div>
            <div class="btn-wrapper">
              <a class="btn btn-success" href="#" data-toggle="modal" data-target="#addModalCashIn">
                <i class="fa fa-pencil"></i>
                <span>Tambah</span>
              </a>
            </div>
          </div>
          <div class="ibox-body">
            <table class="table table-bordered table-responsive" id="dataTables">
              <thead class="thead-default">
                <tr>
                  <th>No</th>
                  <th>Tanggal</th>
                  <th>Keterangan</th>
                  <th>Jumlah</th>
                  <th class="text-center">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% cashIn.forEach((item, index) => { %>
                <tr>
                  <td><%= ++index %></td>
                  <td><%= item.date.toISOString().substring(0, 10).replace(/\-/g, '/') %></td>
                  <td><%= item.description %></td>
                  <td class="text-right"><%= helpers.currencyFormatter(item.amount) %>,-</td>
                  <td class="text-center">
                    <a class="btn btn-danger" href="/admin/cash-in/<%= item._id %>">
                      <i class="fa fa-trash"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr class="bg-light font-weight-bold">
                  <td colspan="3">Total Kas Masuk</td>
                  <td class="text-right"><%= helpers.currencyFormatter(totalCashIn) %>,-</td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>

      <!-- Modal Add Cash-In -->
      <div class="modal fade" id="addModalCashIn" tabindex="-1" aria-labelledby="addModalCashInLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addModalCashInLabel">Tambah Kas Masuk</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/admin/cash-in" method="POST">
              <div class="modal-body">
                <div class="form-group">
                  <label for="date">Tanggal</label>
                  <input type="date" class="form-control" name="date" id="date" value="<%= new Date().toISOString().substring(0, 10) %>">
                </div>
                <div class="form-group">
                  <label for="amount">Jumlah</label>
                  <input type="number" class="form-control" name="amount" id="amount">
                </div>
                <div class="form-group">
                  <label for="description">Keterangan</label>
                  <textarea class="form-control" name="description" id="description" cols="30" rows="6"></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" style="cursor: pointer;">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <%- include('../_partials/footer.ejs') %>
    </div>
  </div>

  <%- include('../_partials/preloader.ejs') %>
  <%- include('../_partials/scripts.ejs') %>

<script>
  $(document).ready( function () {
    $('#dataTables').DataTable();
  });
</script>

</body>
</html>
