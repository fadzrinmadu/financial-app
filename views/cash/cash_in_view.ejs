<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <%- include('../_partials/head.ejs') %>
</head>
<body>
  <div id="wrapper">
    <%- include('../_partials/navbar.ejs') %>
    <%- include('../_partials/sidebar.ejs') %>
    
    <div id="page-wrapper" >
      <div id="page-inner">
        <div class="row">
          <div class="col-md-12">
            <h2>Pemasukkan</h2>
          </div>
        </div> 
        <hr />
        <div class="row">
          <div class="col-md-12">
            <div class="button-wrapper" style="margin-bottom: 20px;">
              <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#modalAddCashIn"><i class="fa fa-plus"></i> Tambah</a>
            </div>
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                      <tr>
                        <th class="text-center">No.</th>
                        <th class="text-center">No. Kwitansi</th>
                        <th class="text-center">Tanggal</th>
                        <th class="text-center">Keterangan</th>
                        <th class="text-center">Jumlah</th>
                        <th class="text-center">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% cashIn.forEach((item, index) => { %>
                      <tr>
                        <td class="text-center"><%= ++index %></td>
                        <td class="text-center"><%= item.receiptNumber %></td>
                        <td class="text-center"><%= item.date.toLocaleString().split(',')[0] %></td>
                        <td><%= item.description %></td>
                        <td class="text-right">Rp. <%= item.amount %>,-</td>
                        <td class="text-center">
                          <a class="btn btn-warning mr-2" href="#"><i class="glyphicon glyphicon-pencil"></i></a>
                          <a class="btn btn-danger" href="/admin/cash-in/<%= item._id %>"><i class="glyphicon glyphicon-trash"></i></a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                    <tfoot class="bg-success">
                      <tr>
                        <td colspan="4"><b>Total pemasukkan:</b></td>
                        <td class="text-right"><b>Rp. 124.000.000.-</b></td>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="modalAddCashIn" tabindex="-1" aria-labelledby="modalAddCashInLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="modalAddCashInLabel">Tambah Pemasukkan</h4>
        </div>
        <form action="/admin/cash-in" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="receiptNumber">No. Kwitansi</label>
              <input type="number" class="form-control" id="receiptNumber" name="receiptNumber">
            </div>
            <div class="form-group">
              <label for="date">Tanggal</label>
              <input type="date" class="form-control" id="date" name="date">
            </div>
            <div class="form-group">
              <label for="amount">Jumlah</label>
              <div class="form-group input-group">
                <span class="input-group-addon">Rp</span>
                <input type="number" class="form-control" id="amount" name="amount">
                <span class="input-group-addon">,-</span>
              </div>
            </div>
            <div class="form-group">
              <label for="description">Keterangan</label>
              <textarea class="form-control" name="description" id="description" cols="30" rows="5"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <%- include('../_partials/scripts.ejs') %>
</body>
</html>
