<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../_partials/head.ejs') %>
  <link href="/css/themes/green-light.css" rel="stylesheet" id="theme-style">
</head>
<body class="fixed-navbar fixed-layout">

  <div class="page-wrapper">
    <%- include('../_partials/navbar.ejs') %>
    <%- include('../_partials/sidebar.ejs') %>

    <div class="content-wrapper">
      <div class="page-heading">
        <h1 class="page-title">Profile</h1>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="index.html"><i class="la la-home font-20"></i></a>
          </li>
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">Profile</li>
        </ol>
      </div>
      <div class="page-content fade-in-up">
        <div class="row">
          <div class="col">
            <div class="ibox">
              <div class="ibox-head">
                <div class="ibox-title">Data Profile</div>
              </div>
              <div class="ibox-body">
                <form>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <label>Nama Lengkap</label>
                        <input class="form-control" type="text" name="name">
                      </div>
                      <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" type="text" name="username">
                      </div>
                      <div class="row">
                        <div class="col form-group">
                          <label>Password</label>
                          <input class="form-control" type="password" name="password">
                          <small class="form-text text-muted">*Kosongkan jika tidak ingin merubah password.</small>
                        </div>
                        <div class="col form-group">
                          <label>Repeat Password</label>
                          <input class="form-control" type="password" name="rePassword">
                        </div>
                      </div>
                    </div>
                    <div class="col">
                      <div class="form-group">
                        <div class="photo-profile mb-2">
                          <img class="img-thumbnail" src="/img/users/u3.jpg" alt="Photo Profile" style="width: 138px; height: 138px; object-fit: cover;">
                        </div>
                        <label>Foto Profile</label>
                        <input class="form-control" type="file" name="image">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <input type="hidden" name="id">
                        <button class="btn btn-primary" type="submit">Simpan</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <%- include('../_partials/footer.ejs') %>
    </div>
  </div>

  <%- include('../_partials/preloader.ejs') %>
  <%- include('../_partials/scripts.ejs') %>

</body>
</html>
